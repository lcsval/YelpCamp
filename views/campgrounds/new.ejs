<% include ../partials/header %>

    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1>Create a New Campground</h1>
        </div>
        
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" placeholder="Yosemite" id="name">
                </div>

                <div class="form-group">
                    <label for="price">Price</label>
                    <input class="form-control" type="number" name="price" placeholder="9.99" min="0.01" step="0.01" id="price">
                </div>
    
                <div class="form-group">
                    <label for="image">Image URL</label>
                    <input class="form-control" type="text" name="image" placeholder="https://images.unsplash.com/..." id="image">
                </div>

                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="description" placeholder="Californias Sierra Nevada Mountains" id="descripetion">
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>

            <a href="/campgrounds">Go Back</a>
        </div>
    </div>

<% include ../partials/footer %>